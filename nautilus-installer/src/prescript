    echo "we would never hurt a fly arglebargle."
    echo ""
    echo "Please enter root password at the prompt"
    xhost + localhost
    su - -c "export DISPLAY=$DISPLAY && cd $PWD && echo Uncompressing... && sh $0"
    xhost - localhost
    exit
fi
